[alias]
    alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/'
    info  = remote show origin
    a   = add -p . #with TermReadKey
    b   = branch
    d   = diff
    f   = fetch --prune
    g   = grep -nH --break --color --heading
    l   = log --abbrev-commit --date=relative --graph --pretty=format:'%C(red)%h %C(yellow)%d%C(green)%cd %C(blue)%cn\n%C(reset)%s'
    s   = status --branch --short
    aa  = add .
    ba  = branch --all
    cm  = commit --message
    co  = checkout
    lv  = log --name-status --abbrev-commit --date=relative --graph --pretty=format:'%C(red)%h %C(yellow)%d%C(green)%cd %C(blue)%cn\n%C(reset)%s'

[color]
    ui      = true

[core]
    editor  = vim
    pager   = less -r
    excludesfile = ~/.gitignore-rkmathi

[interactive]
    singlekey = true

[merge]
    ff = false

[push]
    default = tracking

[user]
    name    = Ryuichi KAWAMATA (rkmathi)
    email   = i@rkmathi.net

