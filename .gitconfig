[alias]
    alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/'
    a   = add -p . # !!!with TermReadKey!!!
    aa  = add .
    b   = branch
    ba  = branch --all
    br  = branch --remote
    cm  = commit --message
    co  = checkout
    cob = checkout -b
    d   = diff
    f   = fetch --prune
    g   = grep -nH --break --color --heading
    i   = remote show origin
    l   = log --abbrev-commit --date=iso --graph --pretty=format:'%C(red)%h %C(yellow)%d%C(green)%cd %C(blue)%cn\n%C(reset)%s\n'
    lv  = log --abbrev-commit --date=iso --graph --pretty=format:'%C(red)%h %C(yellow)%d%C(green)%cd %C(blue)%cn\n%C(reset)%s\n' --name-status
    pln = pull --no-ff
    plf = pull --ff-only
    s   = status --branch --short

[color]
    ui      = true

[core]
    editor  = vim
    pager   = less -r
    excludesfile = ~/.gitignore-rkmathi

[interactive]
    singlekey = true

[merge]
    ff = false

[push]
    default = tracking

[user]
    name    = Ryuichi KAWAMATA (@rkmathi)
    email   = iam@rkmathi.net

